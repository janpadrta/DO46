<h1>Listing houses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Solar</th>
      <th>Exp</th>
      <th>Melange</th>
      <th>Material</th>
      <th>Population</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.name %></td>
        <td><%= house.type %></td>
        <td><%= house.solar %></td>
        <td><%= house.exp %></td>
        <td><%= house.melange %></td>
        <td><%= house.material %></td>
        <td><%= house.population %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

